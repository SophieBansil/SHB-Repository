<h3>Student Housing Buddy Registration Form</h3>

<form action="/createuser" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{registration._id}}" />
  <div class="form-group col-md-8">
    <label>Student ID</label>
    <input
      type="text"
      class="form-control"
      name="StudentID"
      placeholder="Student ID"
      value="{{registration.StudentID}}"
    />
    <div class="text-danger">
      {{registration.StudentIDError}}</div>
  </div>

  <div class="form-group col-md-8">
    <label>First Name</label>
    <input
      type="text"
      class="form-control"
      name="FirstName"
      placeholder="First Name"
      value="{{registration.FirstName}}"
    />
    <div class="text-danger">
      {{registration.FirstNameError}}</div>
  </div>

  <div class="form-group col-md-8">
    <label>Middle Name</label>
    <input
      type="text"
      class="form-control"
      name="MiddleName"
      placeholder="Middle Name"
      value="{{registration.MiddleName}}"
    />
    <div class="text-danger">
      {{registration.MiddleNameError}}</div>
  </div>

  <div class="form-group col-md-8">
    <label>Last Name</label>
    <input
      type="text"
      class="form-control"
      name="LastName"
      placeholder="Last Name"
      value="{{registration.LastName}}"
    />
    <div class="text-danger">
      {{registration.LastNameError}}</div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-2">
      <label>Age</label>
      <input
        type="Number"
        class="form-control"
        name="Age"
        placeholder="Age"
        min="18"
        value="{{registration.Age}}"
      />
      <div class="text-danger">
        {{registration.AgeError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>Address</label>
      <input
        type="text"
        class="form-control"
        name="Address"
        placeholder="Address"
        value="{{registration.Address}}"
      />
      <div class="text-danger">
        {{registration.AddressError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>Phone Number</label>
      <input
        type="text"
        class="form-control"
        name="PhoneNumber"
        placeholder="Phone Number"
        patter="{11}"
        value="{{registration.PhoneNumber}}"
      />
      <div class="text-danger">
        {{registration.PhoneNumberError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>Email</label>
      <input
        type="text"
        class="form-control"
        name="Email"
        placeholder="Email"
        value="{{registration.Email}}"
      />
      <div class="text-danger">
        {{registration.EmailError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>School Year</label>
      <input
        type="text"
        class="form-control"
        name="SchoolYear"
        placeholder="####-####"
        value="{{registration.SchoolYear}}"
      />
      <div class="text-danger">
        {{registration.SchoolYearError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>Start Date</label>
      <input
        type="date"
        class="form-control"
        name="StartDate"
        placeholder="Start Date"
        value="{{registration.StartDate}}"
      />
      <div class="text-danger">
        {{registration.StartDateError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>End Date</label>
      <input
        type="date"
        class="form-control"
        name="EndDate"
        placeholder="End Date"
        value="{{registration.EndDate}}"
      />
      <div class="text-danger">
        {{registration.EndDateError}}</div>
    </div>

    <div class="form-group col-md-2">
      <label>Additional Notes</label>
      <input
        type="text"
        class="form-control"
        name="Notes"
        placeholder="Notes"
        value="{{registration.Notes}}"
      />
      <div class="text-danger">
        {{registration.NotesError}}</div>
    </div>

  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>
      Register</button>
    <input
      type="button"
      class="btn btn-secondary"
      value="Go back!"
      onclick="history.back()"
    />
  </div>
</form>